@model EYDGateway.Controllers.TPDDashboardViewModel
@{
    ViewData["Title"] = "Training Programme Director Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Training Programme Director Dashboard</h2>
                    <p class="text-muted">Welcome, @Model.UserName</p>
                </div>
                <div>
                    <span class="badge bg-warning fs-6">@(ViewBag.UserRole ?? "TPD")</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Summary Cards -->
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Assigned Area</h6>
                            <h4>@Model.AssignedArea</h4>
                        </div>
                        <i class="fas fa-map-marker-alt fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Managed Schemes</h6>
                            <h4>@Model.ManagedSchemes.Count</h4>
                        </div>
                        <i class="fas fa-certificate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">EYD Users</h6>
                            <h4>@Model.AssignedEYDUsers.Count</h4>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Completion Rate</h6>
                            <h4>67%</h4>
                        </div>
                        <i class="fas fa-chart-pie fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Managed Schemes -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-certificate me-2"></i>Managed Schemes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ManagedSchemes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Scheme Name</th>
                                        <th>Assigned EYDs</th>
                                        <th>Progress</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var scheme in Model.ManagedSchemes)
                                    {
                                        var assignedCount = Model.AssignedEYDUsers.Count;
                                        <tr>
                                            <td>
                                                <i class="fas fa-certificate text-primary me-2"></i>
                                                @scheme.Name
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@assignedCount EYDs</span>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar bg-success" role="progressbar" 
                                                         style="width: 67%" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100">
                                                        67%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="ViewSchemeProgress" asp-route-schemeId="@scheme.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-certificate fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No schemes assigned to manage.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- EYD User Management -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Assigned EYD Users
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.AssignedEYDUsers.Any())
                    {
                        @foreach (var eydUser in Model.AssignedEYDUsers)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                                <div>
                                    <strong>@eydUser.DisplayName</strong>
                                    <br>
                                    <small class="text-muted">@eydUser.Email</small>
                                </div>
                                <span class="badge bg-success">Active</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-user-plus fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No EYD users assigned.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- New View-Only Functions -->
    <div class="row mt-4">
        <!-- View Scheme EYDs -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-eye me-2"></i>View Scheme EYD Users
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Select any scheme in your area to view assigned EYD users.</p>
                    
                    @if (Model.AllAreaSchemes?.Any() == true)
                    {
                        <form id="viewSchemeForm" method="post" asp-action="ViewSchemeEYDs">
                            <div class="mb-3">
                                <label for="schemeSelect" class="form-label">Select Scheme:</label>
                                <select id="schemeSelect" name="schemeId" class="form-select" required>
                                    <option value="">Choose a scheme...</option>
                                    @foreach (var scheme in Model.AllAreaSchemes)
                                    {
                                        <option value="@scheme.Id" data-scheme-name="@scheme.Name">
                                            @scheme.Name
                                        </option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-search me-1"></i>View EYD Users
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-certificate fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No schemes available in your area.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Search EYD Users -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>Search EYD Users
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Search for any EYD user across all areas by exact username or GDC number.</p>
                    
                    <form method="post" asp-action="SearchEYD">
                        <div class="mb-3">
                            <label for="searchTerm" class="form-label">Username or GDC Number:</label>
                            <input type="text" id="searchTerm" name="searchTerm" class="form-control" 
                                   placeholder="Enter exact username or GDC number" required>
                            <small class="form-text text-muted">
                                Search requires exact match (case-sensitive for usernames)
                            </small>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-search me-1"></i>Search EYD
                        </button>
                    </form>

                    @if (TempData["SearchResults"] != null)
                    {
                        var searchResults = TempData["SearchResults"] as List<dynamic>;
                        var searchTerm = TempData["SearchTerm"] as string;
                        
                        <div class="mt-4">
                            <h6>Search Results for "@searchTerm":</h6>
                            @if (searchResults?.Any() == true)
                            {
                                <div class="border rounded p-3 bg-light">
                                    @foreach (var user in searchResults)
                                    {
                                        <div class="mb-2">
                                            <strong>@user.DisplayName</strong> (@user.UserName)<br>
                                            <small class="text-muted">
                                                Email: @user.Email | Area: @user.AreaName | Scheme: @user.SchemeName
                                            </small>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-1"></i>
                                    No EYD users found with the exact username or GDC number "@searchTerm".
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SchemeEYDs"] != null)
    {
        var schemeEYDs = TempData["SchemeEYDs"] as List<dynamic>;
        var schemeName = TempData["SchemeName"] as string;
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2"></i>EYD Users in "@schemeName"
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (schemeEYDs?.Any() == true)
                        {
                            <div class="row">
                                @foreach (var eyd in schemeEYDs)
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card border-info">
                                            <div class="card-body">
                                                <h6 class="card-title">@eyd.DisplayName</h6>
                                                <p class="card-text">
                                                    <strong>Username:</strong> @eyd.UserName<br>
                                                    <strong>Email:</strong> @eyd.Email<br>
                                                    <strong>GDC Number:</strong> @eyd.GDCNumber<br>
                                                    <strong>Status:</strong> 
                                                    <span class="badge bg-success">Active</span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="fas fa-user-slash fa-2x text-muted mb-2"></i>
                                <p class="text-muted">No EYD users assigned to this scheme.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
