@model EYDGateway.ViewModels.SignificantEventDetailsViewModel

@{
    ViewData["Title"] = "Delete Significant Event";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash"></i> Delete Significant Event
                    </h4>
                    <small>Are you sure you want to delete this significant event?</small>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. All reflection content and EPA mappings will be permanently deleted.
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Significant Event to be Deleted</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Title</dt>
                                <dd class="col-sm-9">
                                    <strong class="text-primary">@Model.Title</strong>
                                </dd>
                                
                                <dt class="col-sm-3">Account of Experience</dt>
                                <dd class="col-sm-9">
                                    <div class="border rounded p-2 bg-light" style="max-height: 100px; overflow-y: auto;">
                                        @Html.DisplayFor(model => model.AccountOfExperience)
                                    </div>
                                </dd>
                                
                                <dt class="col-sm-3">Analysis of Situation</dt>
                                <dd class="col-sm-9">
                                    <div class="border rounded p-2 bg-light" style="max-height: 100px; overflow-y: auto;">
                                        @Html.DisplayFor(model => model.AnalysisOfSituation)
                                    </div>
                                </dd>
                                
                                <dt class="col-sm-3">Reflection on Event</dt>
                                <dd class="col-sm-9">
                                    <div class="border rounded p-2 bg-light" style="max-height: 100px; overflow-y: auto;">
                                        @Html.DisplayFor(model => model.ReflectionOnEvent)
                                    </div>
                                </dd>
                                
                                <dt class="col-sm-3">Author</dt>
                                <dd class="col-sm-9">@Model.UserName</dd>
                                
                                <dt class="col-sm-3">Created</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                                
                                <dt class="col-sm-3">Last Updated</dt>
                                <dd class="col-sm-9">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input asp-for="Id" type="hidden" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Are you absolutely sure you want to delete this significant event? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Yes, Delete Permanently
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
