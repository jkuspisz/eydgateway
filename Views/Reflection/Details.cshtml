@model EYDGateway.Models.PortfolioReflection

@{
    ViewData["Title"] = "Reflection Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h4>@ViewData["Title"]</h4>
                        @if (ViewBag.TargetUserId != null && ViewBag.TargetUserId != User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <small class="text-muted">Viewing reflection by: <strong>@Model.User?.UserName</strong></small>
                        }
                    </div>
                    <div>
                        @if (ViewBag.CanEdit != true)
                        {
                            <span class="badge bg-info fs-6 me-2">
                                <i class="fas fa-eye me-1"></i>View Only
                            </span>
                        }
                        @if (Model.IsLocked)
                        {
                            <span class="badge bg-secondary fs-6">
                                <i class="fas fa-lock me-1"></i>Locked
                            </span>
                        }
                        else if (ViewBag.CanEdit == true)
                        {
                            <span class="badge bg-info fs-6">
                                <i class="fas fa-edit me-1"></i>Editable
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Focus/Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                        
                        <dt class="col-sm-3">When did it happen?</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.WhenDidItHappen)</dd>
                        
                        <dt class="col-sm-3">Reasons for writing</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-3 bg-light">
                                @Html.DisplayFor(model => model.ReasonsForWriting)
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Next steps</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-3 bg-light">
                                @Html.DisplayFor(model => model.NextSteps)
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Related EPAs</dt>
                        <dd class="col-sm-9">
                            @if (Model.EPAMappings != null && Model.EPAMappings.Any())
                            {
                                <div class="row">
                                    @foreach (var mapping in Model.EPAMappings)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="card border-primary">
                                                <div class="card-body p-2">
                                                    <h6 class="card-title mb-1">
                                                        <span class="badge bg-primary me-2">@mapping.EPA.Code</span>
                                                        @mapping.EPA.Title
                                                    </h6>
                                                    @if (!string.IsNullOrEmpty(mapping.EPA.Description))
                                                    {
                                                        <p class="card-text small text-muted mb-0">@mapping.EPA.Description</p>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No EPA mappings have been assigned to this reflection yet.
                                </div>
                            }
                        </dd>
                    </dl>
                    
                    <hr class="my-4">
                    <dl class="row">
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                        
                        <dt class="col-sm-3">Last Updated</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsLocked)
                            {
                                <span class="text-secondary">
                                    <i class="fas fa-lock me-1"></i>This reflection is locked and cannot be edited
                                </span>
                            }
                            else
                            {
                                <span class="text-info">
                                    <i class="fas fa-edit me-1"></i>This reflection can be edited
                                </span>
                            }
                        </dd>
                    </dl>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-id="@ViewBag.TargetUserId" class="btn btn-secondary">Back to List</a>
                        <div>
                            @if (ViewBag.CanEdit == true)
                            {
                                @if (!Model.IsLocked)
                                {
                                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a>
                                }
                                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Delete</a>
                                
                                @* Toggle Lock Button *@
                                <form asp-action="ToggleLock" asp-route-id="@Model?.Id" method="post" class="d-inline">
                                    @if (Model.IsLocked)
                                    {
                                        <button type="submit" class="btn btn-warning btn-sm ms-2">
                                            <i class="fas fa-unlock me-1"></i>Unlock
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-secondary btn-sm ms-2">
                                            <i class="fas fa-lock me-1"></i>Lock
                                        </button>
                                    }
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
