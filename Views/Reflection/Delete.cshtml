@model EYDGateway.Models.PortfolioReflection

@{
    ViewData["Title"] = "Delete Reflection";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this reflection? This action cannot be undone.
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Focus/Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                        
                        <dt class="col-sm-3">When did it happen?</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.WhenDidItHappen)</dd>
                        
                        <dt class="col-sm-3">Reasons for writing</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-2 bg-light">
                                @(Model.ReasonsForWriting.Length > 200 ? Model.ReasonsForWriting.Substring(0, 200) + "..." : Model.ReasonsForWriting)
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Next steps</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-2 bg-light">
                                @(Model.NextSteps.Length > 200 ? Model.NextSteps.Substring(0, 200) + "..." : Model.NextSteps)
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                        
                        @if (Model.IsLocked)
                        {
                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-secondary">
                                    <i class="fas fa-lock me-1"></i>Locked
                                </span>
                            </dd>
                        }
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Reflection
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
