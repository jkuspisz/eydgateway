@model EYDGateway.Controllers.EYDPortfolioViewModel
@{
    ViewData["Title"] = "EYD Portfolio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>EYD Portfolio</h2>
                    <p class="text-muted">Welcome, @Model.UserName</p>
                    <small class="text-muted">Scheme: @Model.AssignedScheme | Area: @Model.AssignedArea</small>
                </div>
                <div>
                    <span class="badge bg-info fs-6">EYD User</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Portfolio Section Groups -->
    <div class="row">
        @foreach (var group in Model.PortfolioSectionGroups)
        {
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card portfolio-group-card h-100">
                    <div class="card-header bg-primary text-white py-2">
                        <h6 class="mb-0">
                            <i class="@group.Icon me-2"></i>@group.Title
                        </h6>
                        @if (group.TotalItems > 0)
                        {
                            <small class="opacity-75">@group.CompletedItems / @group.TotalItems completed</small>
                        }
                    </div>
                    <div class="card-body py-2">
                        @foreach (var portfolioSection in group.Sections)
                        {
                            <div class="portfolio-section-item mb-2" onclick="navigateToSection('@portfolioSection.Action')">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="flex-grow-1">
                                        <span class="section-title">@portfolioSection.Title</span>
                                        @if (portfolioSection.CompletedCount.HasValue && portfolioSection.TotalCount.HasValue)
                                        {
                                            <small class="text-muted ms-2">(@portfolioSection.CompletedCount/@portfolioSection.TotalCount)</small>
                                        }
                                    </div>
                                    <div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    </div>
</div>

<script>
    function navigateToSection(action) {
        window.location.href = '@Url.Action("", "EYD")'.replace('Dashboard', action);
    }
</script>

<style>
    .portfolio-group-card {
        border: 1px solid #e0e0e0;
        transition: box-shadow 0.2s ease-in-out;
        border-radius: 8px;
    }

    .portfolio-group-card:hover {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .portfolio-group-card .card-header {
        border-radius: 8px 8px 0 0;
        font-size: 0.9rem;
    }

    .portfolio-section-item {
        cursor: pointer;
        padding: 8px 12px;
        border: 1px solid #f0f0f0;
        border-radius: 4px;
        transition: all 0.2s ease-in-out;
        background-color: #fafafa;
    }

    .portfolio-section-item:hover {
        background-color: #e3f2fd;
        border-color: #2196f3;
        transform: translateY(-1px);
    }

    .section-title {
        font-weight: 500;
        font-size: 0.9rem;
        color: #333;
    }

    .portfolio-section-item:last-child {
        margin-bottom: 0 !important;
    }

    .card-body {
        font-size: 0.85rem;
    }

    .fas.fa-chevron-right {
        font-size: 0.75rem;
        opacity: 0.6;
    }
</style>
