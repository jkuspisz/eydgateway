@model EYDGateway.ViewModels.EditESInductionViewModel

@{
    ViewData["Title"] = "Edit ES Induction - " + Model?.EYDUserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit ES Induction Record
                    </h4>
                    <small>EYD User: @Model?.EYDUserName</small>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="EYDUserId" />
                        <input type="hidden" asp-for="EYDUserName" />

                        <!-- Meeting Date -->
                        <div class="form-group">
                            <label asp-for="MeetingDate" class="control-label">
                                <i class="fas fa-calendar"></i> Meeting Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="MeetingDate" class="form-control" type="date" />
                            <span asp-validation-for="MeetingDate" class="text-danger"></span>
                            <small class="form-text text-muted">Date when the ES induction meeting took place.</small>
                        </div>

                        <!-- Educational Transition Document & PDP -->
                        <div class="form-group">
                            <div class="card border-info">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-file-check"></i> Educational Transition Document & PDP
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-check">
                                        <input asp-for="HasReadTransitionDocumentAndAgreedPDP" class="form-check-input" type="checkbox" />
                                        <label asp-for="HasReadTransitionDocumentAndAgreedPDP" class="form-check-label">
                                            <strong>Have you read the Educational Transition Document and agreed a PDP for this placement?</strong>
                                        </label>
                                    </div>
                                    <span asp-validation-for="HasReadTransitionDocumentAndAgreedPDP" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Check this box to confirm that the Educational Transition Document has been reviewed and a Personal Development Plan (PDP) has been agreed for this placement.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Meeting Notes and Comments -->
                        <div class="form-group">
                            <label asp-for="MeetingNotesAndComments" class="control-label">
                                <i class="fas fa-comments"></i> Meeting Notes and Comments <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="MeetingNotesAndComments" class="form-control" rows="6" placeholder="Please record any comments or notes as discussed and agreed during the meeting..."></textarea>
                            <span asp-validation-for="MeetingNotesAndComments" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Record detailed notes from the induction meeting, including any agreements, concerns, or action points discussed.
                            </small>
                        </div>

                        <!-- Placement Description -->
                        <div class="form-group">
                            <label asp-for="PlacementDescription" class="control-label">
                                <i class="fas fa-hospital"></i> Placement Description and Details <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="PlacementDescription" class="form-control" rows="6" placeholder="Give a brief description of the placement and details..."></textarea>
                            <span asp-validation-for="PlacementDescription" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Provide a comprehensive description of the placement, including the department, specialties, learning opportunities, and any relevant details about the rotation.
                            </small>
                        </div>

                        <!-- Completion Status -->
                        <div class="form-group">
                            <div class="card border-success">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-check-circle"></i> Completion Status
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-check">
                                        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsCompleted" class="form-check-label">
                                            <strong>Mark this induction as completed</strong>
                                        </label>
                                    </div>
                                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Check this box if the induction meeting is fully completed. You can save changes and mark as completed later if needed.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-group mt-4">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Update Induction Record
                                </button>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.Id">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewBag.TargetUserId">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Character counter for text areas
            $('textarea').each(function() {
                var maxLength = $(this).attr('maxlength');
                if (maxLength) {
                    var counterId = $(this).attr('id') + '_counter';
                    $(this).after('<small class="form-text text-muted" id="' + counterId + '">Characters: 0/' + maxLength + '</small>');
                    
                    $(this).on('input', function() {
                        var currentLength = $(this).val().length;
                        $('#' + counterId).text('Characters: ' + currentLength + '/' + maxLength);
                        
                        if (currentLength > maxLength * 0.9) {
                            $('#' + counterId).removeClass('text-muted').addClass('text-warning');
                        } else {
                            $('#' + counterId).removeClass('text-warning').addClass('text-muted');
                        }
                    });
                    
                    // Trigger initial count
                    $(this).trigger('input');
                }
            });

            // Show warning if required checkbox is not checked
            $('input[type="checkbox"][data-val-required]').on('change', function() {
                var cardBody = $(this).closest('.card-body');
                if ($(this).is(':checked') && $(this).attr('data-val-required')) {
                    cardBody.removeClass('border-warning').addClass('border-success');
                } else if ($(this).attr('data-val-required')) {
                    cardBody.removeClass('border-success').addClass('border-warning');
                }
            });

            // Handle completion status visual feedback
            $('#IsCompleted').on('change', function() {
                var card = $(this).closest('.card');
                if ($(this).is(':checked')) {
                    card.removeClass('border-warning').addClass('border-success');
                    card.find('.card-header').removeClass('bg-light').addClass('bg-success text-white');
                } else {
                    card.removeClass('border-success').addClass('border-warning');
                    card.find('.card-header').removeClass('bg-success text-white').addClass('bg-light');
                }
            });

            // Trigger initial state
            $('#IsCompleted').trigger('change');
            $('input[type="checkbox"][data-val-required]').trigger('change');

            // Warn user about unsaved changes
            var formChanged = false;
            $('form input, form textarea, form select').on('change', function() {
                formChanged = true;
            });

            window.addEventListener('beforeunload', function (e) {
                if (formChanged) {
                    e.preventDefault();
                    e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
                }
            });

            $('form').on('submit', function() {
                formChanged = false;
            });
        });
    </script>
}
