@{
    ViewData["Title"] = "User Debug Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current User Debug Info</h2>

<div class="card">
    <div class="card-body">
        <h5>Authentication Status</h5>
        <p><strong>Is Authenticated:</strong> @User.Identity.IsAuthenticated</p>
        <p><strong>Username:</strong> @User.Identity.Name</p>
        
        <h5>User Claims</h5>
        @if (User.Claims.Any())
        {
            <ul>
                @foreach (var claim in User.Claims)
                {
                    <li><strong>@claim.Type:</strong> @claim.Value</li>
                }
            </ul>
        }
        else
        {
            <p>No claims found</p>
        }
        
        <h5>Roles</h5>
        @{
            var roles = new[] { "Superuser", "Admin", "Dean", "TPD", "ES", "EYD", "ASSESSOR" };
        }
        <ul>
            @foreach (var role in roles)
            {
                <li><strong>@role:</strong> @(User.IsInRole(role) ? "✅ Yes" : "❌ No")</li>
            }
        </ul>
    </div>
</div>

<div class="mt-3">
    <a href="/" class="btn btn-primary">Back to Home</a>
</div>
