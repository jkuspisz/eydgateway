@model EYDGateway.Models.SuperuserUserManagementViewModel

@{
    ViewBag.Title = "Manage Users";
    var currentUserRole = ViewBag.CurrentUserRole as string ?? "Unknown";
    var isAdmin = currentUserRole == "Admin";
    var isSuperuser = currentUserRole == "Superuser";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users-cog"></i> Manage Users @(isAdmin ? "(Admin View)" : "(Superuser View)")</h2>
                <div>
                    <a href="@Url.Action("CreateNewUser")" class="btn btn-success me-2">
                        <i class="fas fa-user-plus"></i> Create New User
                    </a>
                    @if (isSuperuser)
                    {
                        <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    }
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- User Management Table -->
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-users"></i> All Users</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Users.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No users found.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>User</th>
                                        <th>Role</th>
                                        <th>Assignment</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.DisplayName</strong><br>
                                                <small class="text-muted">@user.UserName (@user.Email)</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-@GetRoleColor(user.Role ?? "Unassigned")">
                                                    @(user.Role ?? "Unassigned")
                                                </span>
                                            </td>
                                            <td>
                                                @if (user.Area != null)
                                                {
                                                    <div>
                                                        <i class="fas fa-map-marked-alt text-primary"></i>
                                                        <strong>Area:</strong> @user.Area.Name
                                                    </div>
                                                }
                                                @if (user.Scheme != null)
                                                {
                                                    <div>
                                                        <i class="fas fa-sitemap text-info"></i>
                                                        <strong>Scheme:</strong> @user.Scheme.Name
                                                    </div>
                                                }
                                                @if (user.Area == null && user.Scheme == null)
                                                {
                                                    <span class="text-muted">No assignment</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Role == "Superuser")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-crown"></i> System Admin
                                                    </span>
                                                }
                                                else if (user.Area != null || user.Scheme != null)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Assigned
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-exclamation-triangle"></i> Unassigned
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @* Edit Details button - available for all users that current user can view *@
                                                @if (!(isAdmin && (user.Role == "Admin" || user.Role == "Superuser")))
                                                {
                                                    <a href="@Url.Action("EditUserDetails", new { userId = user.Id })" 
                                                       class="btn btn-sm btn-info me-1" 
                                                       title="Edit user details (name, email, password)">
                                                        <i class="fas fa-user-edit"></i> Details
                                                    </a>
                                                }
                                                
                                                @* Assignment editing - only for non-superuser users that current user can manage *@
                                                @if (user.Role != "Superuser" && !(isAdmin && (user.Role == "Admin" || user.Role == "Superuser")))
                                                {
                                                    <button type="button" class="btn btn-sm btn-primary me-1" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#reassignModal" 
                                                            data-user-id="@user.Id"
                                                            data-user-name="@user.DisplayName"
                                                            data-user-role="@user.Role"
                                                            data-user-area="@user.AreaId"
                                                            data-user-scheme="@user.SchemeId">
                                                        <i class="fas fa-edit"></i> Assignments
                                                    </button>
                                                    
                                                    @if (user.Area != null || user.Scheme != null)
                                                    {
                                                        <form method="post" action="@Url.Action("RemoveUserAssignment")" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                    onclick="return confirm('Remove all assignments for @user.DisplayName?')">
                                                                <i class="fas fa-unlink"></i> Unassign
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                else if (isAdmin && (user.Role == "Admin" || user.Role == "Superuser"))
                                                {
                                                    <span class="text-muted">No Assignment Permission</span>
                                                }
                                                else if (user.Role == "Superuser" && isSuperuser)
                                                {
                                                    <span class="text-muted">Assignment Protected</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reassign User Modal -->
<div class="modal fade" id="reassignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reassign User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("ReassignUser")">
                <div class="modal-body">
                    <input type="hidden" name="userId" id="modalUserId" />
                    
                    <div class="mb-3">
                        <label class="form-label">User:</label>
                        <span id="modalUserName" class="fw-bold"></span>
                    </div>

                    <div class="mb-3">
                        <label for="newRole" class="form-label">Role</label>
                        <select name="newRole" id="newRole" class="form-select">
                            <option value="">Keep Current Role</option>
                            @if (isSuperuser)
                            {
                                <option value="Admin">Admin</option>
                                <option value="Superuser">Superuser</option>
                            }
                            <option value="ES">ES</option>
                            <option value="TPD">TPD</option>
                            <option value="Dean">Dean</option>
                            <option value="EYD">EYD</option>
                        </select>
                        @if (isAdmin)
                        {
                            <div class="form-text">As an Admin, you can only modify TPD, Dean, ES, and EYD users.</div>
                        }
                    </div>

                    <div class="mb-3" id="areaSection">
                        <label for="newAreaId" class="form-label">Area (for Admin/ES roles)</label>
                        <select name="newAreaId" id="newAreaId" class="form-select">
                            <option value="">No Area Assignment</option>
                            @foreach (var area in Model.Areas)
                            {
                                <option value="@area.Id">@area.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3" id="schemeSection">
                        <label for="newSchemeId" class="form-label">Scheme (for TPD/EYD roles)</label>
                        <select name="newSchemeId" id="newSchemeId" class="form-select">
                            <option value="">No Scheme Assignment</option>
                            @foreach (var scheme in Model.Schemes)
                            {
                                <option value="@scheme.Id">@scheme.Name (@scheme.Area.Name)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update User</button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    string GetRoleColor(string role)
    {
        return role switch
        {
            "Superuser" => "warning",
            "Admin" => "primary",
            "TPD" => "success",
            "EYD" => "info",
            "ES" => "secondary",
            "Dean" => "dark",
            _ => "light"
        };
    }
}

@section Scripts {
    <script>
        // Handle reassign modal
        document.getElementById('reassignModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var userId = button.getAttribute('data-user-id');
            var userName = button.getAttribute('data-user-name');
            var userRole = button.getAttribute('data-user-role');
            var userArea = button.getAttribute('data-user-area');
            var userScheme = button.getAttribute('data-user-scheme');

            document.getElementById('modalUserId').value = userId;
            document.getElementById('modalUserName').textContent = userName;
            document.getElementById('newRole').value = userRole || '';
            document.getElementById('newAreaId').value = userArea || '';
            document.getElementById('newSchemeId').value = userScheme || '';
        });

        // Show/hide sections based on role
        document.getElementById('newRole').addEventListener('change', function() {
            var role = this.value;
            var areaSection = document.getElementById('areaSection');
            var schemeSection = document.getElementById('schemeSection');
            
            if (role === 'Admin' || role === 'ES') {
                areaSection.style.display = 'block';
                schemeSection.style.display = 'none';
            } else if (role === 'TPD' || role === 'EYD') {
                areaSection.style.display = 'none';
                schemeSection.style.display = 'block';
            } else {
                areaSection.style.display = 'none';
                schemeSection.style.display = 'none';
            }
        });

        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
