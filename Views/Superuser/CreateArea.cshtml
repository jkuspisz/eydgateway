@{
    ViewBag.Title = "Create New Area";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-plus"></i> Create New Area</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("CreateArea")">
                        <div class="mb-3">
                            <label for="areaName" class="form-label">
                                <i class="fas fa-map-marked-alt"></i> Area Name
                            </label>
                            <input type="text" name="areaName" id="areaName" class="form-control" 
                                   placeholder="Enter area name (e.g., 'Northern Region', 'Central District')" 
                                   required maxlength="100" />
                            <div class="form-text">
                                Enter a descriptive name for the geographic or administrative area.
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> 
                                Once created, you can assign an Admin user to manage this area and create schemes within it.
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Create Area
                            </button>
                            <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Focus on the area name input
        document.getElementById('areaName').focus();
        
        // Add form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const input = document.getElementById('areaName');
            if (!input.value.trim()) {
                e.preventDefault();
                alert('Please enter an area name.');
                input.focus();
            }
        });
    </script>
}
