@model EYDGateway.Models.AssignAdminViewModel

@{
    ViewBag.Title = "Assign Admin to Area";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user-shield"></i> Assign Admin to Area: @Model.Area.Name</h4>
                </div>
                <div class="card-body">
                    @if (!Model.AvailableAdmins.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> No available Admin users found. All Admin users are already assigned to areas.
                        </div>
                        <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    }
                    else
                    {
                        <form method="post" action="@Url.Action("AssignAdmin")">
                            <input type="hidden" name="areaId" value="@Model.Area.Id" />
                            
                            <div class="mb-3">
                                <label for="adminUserId" class="form-label">
                                    <i class="fas fa-user"></i> Select Admin User
                                </label>
                                <select name="adminUserId" id="adminUserId" class="form-select" required>
                                    <option value="">-- Select an Admin --</option>
                                    @foreach (var admin in Model.AvailableAdmins)
                                    {
                                        <option value="@admin.Id">
                                            @admin.DisplayName (@admin.UserName) - @admin.Email
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> 
                                    This will assign the selected Admin user to manage the <strong>@Model.Area.Name</strong> area.
                                    The Admin will have access to manage users and schemes within this area.
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check"></i> Assign Admin
                                </button>
                                <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const select = document.getElementById('adminUserId');
            if (!select.value) {
                e.preventDefault();
                alert('Please select an Admin user to assign.');
                select.focus();
            }
        });
    </script>
}
