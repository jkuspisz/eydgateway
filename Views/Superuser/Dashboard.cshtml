@model EYDGateway.Models.SuperuserDashboardViewModel

@{
    ViewBag.Title = "Superuser Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-crown text-warning"></i> Superuser Dashboard</h2>
                <div>
                    <a href="@Url.Action("CreateArea")" class="btn btn-success me-2">
                        <i class="fas fa-plus"></i> Create Area
                    </a>
                    <a href="@Url.Action("ManageUsers")" class="btn btn-primary me-2">
                        <i class="fas fa-users-cog"></i> Manage Users
                    </a>
                    <a href="@Url.Action("ManageSchemes")" class="btn btn-info me-2">
                        <i class="fas fa-sitemap"></i> Manage Schemes
                    </a>
                    <a href="@Url.Action("CreateNewUser")" class="btn btn-success me-2">
                        <i class="fas fa-user-plus"></i> Create User
                    </a>
                    <a href="@Url.Action("SystemOverview")" class="btn btn-info">
                        <i class="fas fa-chart-bar"></i> System Overview
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- System Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users fa-2x me-3"></i>
                                <div>
                                    <h5 class="card-title">Total Users</h5>
                                    <h3>@Model.Users.Count</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marked-alt fa-2x me-3"></i>
                                <div>
                                    <h5 class="card-title">Total Areas</h5>
                                    <h3>@Model.Areas.Count</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-sitemap fa-2x me-3"></i>
                                <div>
                                    <h5 class="card-title">Total Schemes</h5>
                                    <h3>@Model.Areas.SelectMany(a => a.Schemes ?? new List<EYDGateway.Models.Scheme>()).Count()</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-shield fa-2x me-3"></i>
                                <div>
                                    <h5 class="card-title">Unassigned Admins</h5>
                                    <h3>@Model.Users.Count(u => u.Role == "Admin" && u.AreaId == null)</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Areas and Admin Assignments -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4><i class="fas fa-map-marked-alt"></i> Areas and Admin Assignments</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Areas.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No areas created yet. 
                            <a href="@Url.Action("CreateArea")" class="btn btn-sm btn-success ms-2">Create First Area</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-map-marked-alt"></i> Area Name</th>
                                        <th><i class="fas fa-user-shield"></i> Assigned Admin</th>
                                        <th><i class="fas fa-sitemap"></i> Schemes</th>
                                        <th><i class="fas fa-cogs"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var area in Model.Areas)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@area.Name</strong>
                                            </td>
                                            <td>
                                                @{
                                                    var admins = Model.Users.Where(u => u.Role == "Admin" && u.AreaId == area.Id).ToList();
                                                }
                                                @if (admins.Any())
                                                {
                                                    @foreach (var admin in admins)
                                                    {
                                                        <span class="badge bg-success me-1">
                                                            <i class="fas fa-user"></i> @admin.DisplayName (@admin.UserName)
                                                        </span>
                                                        <br>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-exclamation-triangle"></i> No Admins Assigned
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (area.Schemes != null && area.Schemes.Any())
                                                {
                                                    <span class="badge bg-info">@area.Schemes.Count schemes</span>
                                                    <div class="small text-muted">
                                                        @string.Join(", ", area.Schemes.Take(3).Select(s => s.Name))
                                                        @if (area.Schemes.Count > 3)
                                                        {
                                                            <span>... and @(area.Schemes.Count - 3) more</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No schemes</span>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-primary me-1" href="@Url.Action("AssignAdmin", new { areaId = area.Id })">
                                                    <i class="fas fa-user-plus"></i> Assign Admin
                                                </a>
                                                <a class="btn btn-sm btn-info" href="@Url.Action("ManageUsers")">
                                                    <i class="fas fa-cog"></i> Manage
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <!-- User Role Summary -->
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-users"></i> User Summary by Role</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        @{
                            var roleGroups = Model.Users.GroupBy(u => u.Role ?? "Unassigned").ToList();
                        }
                        @foreach(var roleGroup in roleGroups)
                        {
                            <div class="col-md-2 mb-3">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">@roleGroup.Key</h5>
                                        <h3 class="text-primary">@roleGroup.Count()</h3>
                                        @if (roleGroup.Key == "Admin")
                                        {
                                            <small class="text-muted">
                                                @roleGroup.Count(u => u.AreaId != null) assigned
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
