@model EYDGateway.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Admin Dashboard</h2>
                    <p class="text-muted">Welcome, @Model.UserName</p>
                </div>
                <div>
                    <span class="badge bg-dark fs-6">Administrator</span>
                    <a asp-action="SystemReport" class="btn btn-outline-primary ms-2">
                        <i class="fas fa-chart-bar me-2"></i>System Report
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Users</h6>
                            <h4>@Model.TotalUsers</h4>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Areas</h6>
                            <h4>@Model.TotalAreas</h4>
                        </div>
                        <i class="fas fa-map-marker-alt fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Schemes</h6>
                            <h4>@Model.TotalSchemes</h4>
                        </div>
                        <i class="fas fa-certificate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">System Health</h6>
                            <h4>100%</h4>
                        </div>
                        <i class="fas fa-heartbeat fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="CreateUser" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>Create New User
                        </a>
                        <form asp-action="CleanupOrphanEPAMappings" method="post" class="d-grid">
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('This will remove orphan EPA mappings that point to deleted items. Continue?');">
                                <i class="fas fa-broom me-2"></i>Clean EPA Mappings
                            </button>
                        </form>
                        <hr class="my-2">
                        <div class="text-center">
                            <small class="text-muted fw-bold">SCHEME MANAGEMENT</small>
                        </div>
                        <a asp-action="ManageSchemes" class="btn btn-outline-success">
                            <i class="fas fa-building me-2"></i>Manage Schemes
                        </a>
                        <a asp-action="AssignUsers" class="btn btn-outline-warning">
                            <i class="fas fa-users me-2"></i>Assign Users
                        </a>
                        <a asp-action="ManageESAssignments" class="btn btn-outline-info">
                            <i class="fas fa-link me-2"></i>ES-EYD Assignments
                        </a>
                        <hr class="my-2">
                        <div class="text-center">
                            <small class="text-muted fw-bold">USER MANAGEMENT</small>
                        </div>
                        <a asp-controller="Superuser" asp-action="ManageUsers" class="btn btn-outline-primary">
                            <i class="fas fa-users-cog me-2"></i>Manage Users
                        </a>
                        <a asp-controller="Superuser" asp-action="CreateNewUser" class="btn btn-outline-success">
                            <i class="fas fa-user-plus me-2"></i>Create New User
                        </a>
                        <hr class="my-2">
                        <div class="text-center">
                            <small class="text-muted fw-bold">LEGACY ACTIONS</small>
                        </div>
                        <a asp-action="ManageUsers" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-users-cog me-2"></i>Legacy User Management
                        </a>
                        <a asp-action="ManageAreas" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-map-marked-alt me-2"></i>Manage Areas
                        </a>
                        <a asp-action="SystemReport" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-chart-line me-2"></i>System Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users by Role -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-tag me-2"></i>Users by Role
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UsersByRole.Any())
                    {
                        @foreach (var roleGroup in Model.UsersByRole)
                        {
                            var badgeClass = roleGroup.Key switch
                            {
                                "Admin" => "bg-dark",
                                "Superuser" => "bg-danger",
                                "ES" => "bg-warning",
                                "TPD" => "bg-info",
                                "Dean" => "bg-info",
                                "EYD" => "bg-success",
                                _ => "bg-secondary"
                            };
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge @badgeClass">@roleGroup.Key</span>
                                <span class="fw-bold">@roleGroup.Value users</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No users found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-clock me-2"></i>Recent Users
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentUsers.Any())
                    {
                        @foreach (var user in Model.RecentUsers)
                        {
                            var roleClass = user.Role switch
                            {
                                "Admin" => "text-dark",
                                "Superuser" => "text-danger",
                                "ES" => "text-warning",
                                "TPD" => "text-info",
                                "Dean" => "text-info",
                                "EYD" => "text-success",
                                _ => "text-secondary"
                            };
                            
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                                <div>
                                    <strong>@user.DisplayName</strong>
                                    <br>
                                    <small class="text-muted">@user.Email</small>
                                </div>
                                <span class="badge bg-secondary">@user.Role</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No recent users.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Areas Overview -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marked-alt me-2"></i>Areas Overview
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Areas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Area Name</th>
                                        <th>Schemes Count</th>
                                        <th>Assigned Users</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var area in Model.Areas)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                                @area.Name
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(area.Schemes?.Count ?? 0) schemes</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    @Model.RecentUsers.Count(u => u.AreaId == area.Id) users
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-map-marked-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No areas configured yet.</p>
                            <a asp-action="ManageAreas" class="btn btn-warning">
                                <i class="fas fa-plus me-2"></i>Create First Area
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
