@model EYDGateway.Controllers.UserAssignmentViewModel
@{
    ViewData["Title"] = "Assign Users";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Assign Users to Schemes</h2>
                    <p class="text-muted">Manage user assignments within your area</p>
                </div>
                <div>
                    <a asp-action="Dashboard" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    <a asp-action="ManageSchemes" class="btn btn-outline-primary">
                        <i class="fas fa-building me-2"></i>Manage Schemes
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- TPD Assignments -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-tie me-2"></i>Assign TPDs to Schemes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UnassignedTPDs.Any() && Model.Schemes.Any())
                    {
                        <form asp-action="AssignTPDToScheme" method="post">
                            <div class="mb-3">
                                <label for="tpdUserId" class="form-label">Select TPD</label>
                                <select class="form-select" id="tpdUserId" name="userId" required>
                                    <option value="">Choose a TPD...</option>
                                    @foreach (var tpd in Model.UnassignedTPDs)
                                    {
                                        <option value="@tpd.Id">@tpd.DisplayName (@tpd.UserName)</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="tpdSchemeId" class="form-label">Select Scheme</label>
                                <select class="form-select" id="tpdSchemeId" name="schemeId" required>
                                    <option value="">Choose a scheme...</option>
                                    @foreach (var scheme in Model.Schemes)
                                    {
                                        <option value="@scheme.Id">@scheme.Name</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-link me-2"></i>Assign TPD
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                            @if (!Model.UnassignedTPDs.Any())
                            {
                                <p class="text-muted">No unassigned TPDs available</p>
                            }
                            @if (!Model.Schemes.Any())
                            {
                                <p class="text-muted">No schemes available for assignment</p>
                                <a asp-action="ManageSchemes" class="btn btn-sm btn-primary">Create Schemes</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- EYD Assignments -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-md me-2"></i>Assign EYDs to Schemes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UnassignedEYDs.Any() && Model.Schemes.Any())
                    {
                        <form asp-action="AssignEYDToScheme" method="post">
                            <div class="mb-3">
                                <label for="eydUserId" class="form-label">Select EYD</label>
                                <select class="form-select" id="eydUserId" name="userId" required>
                                    <option value="">Choose an EYD...</option>
                                    @foreach (var eyd in Model.UnassignedEYDs)
                                    {
                                        <option value="@eyd.Id">@eyd.DisplayName (@eyd.UserName)</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="eydSchemeId" class="form-label">Select Scheme</label>
                                <select class="form-select" id="eydSchemeId" name="schemeId" required>
                                    <option value="">Choose a scheme...</option>
                                    @foreach (var scheme in Model.Schemes)
                                    {
                                        <option value="@scheme.Id">@scheme.Name</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-link me-2"></i>Assign EYD
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                            @if (!Model.UnassignedEYDs.Any())
                            {
                                <p class="text-muted">No unassigned EYDs available</p>
                            }
                            @if (!Model.Schemes.Any())
                            {
                                <p class="text-muted">No schemes available for assignment</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ES-EYD Assignments -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-link me-2"></i>Assign ES Users to EYDs
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ESUsers.Any() && Model.AssignedEYDs.Any())
                    {
                        <form asp-action="AssignESToEYD" method="post" class="mb-4">
                            <div class="row">
                                <div class="col-md-5">
                                    <label for="esUserId" class="form-label">Select ES User</label>
                                    <select class="form-select" id="esUserId" name="esUserId" required>
                                        <option value="">Choose an ES user...</option>
                                        @foreach (var es in Model.ESUsers)
                                        {
                                            <option value="@es.Id">@es.DisplayName (@es.UserName)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <label for="eydUserId" class="form-label">Select EYD Supervisor</label>
                                    <select class="form-select" id="eydUserIdForES" name="eydUserId" required>
                                        <option value="">Choose an EYD...</option>
                                        @foreach (var eyd in Model.AssignedEYDs)
                                        {
                                            <option value="@eyd.Id">@eyd.DisplayName - @eyd.Scheme?.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-info w-100">
                                        <i class="fas fa-plus me-1"></i>Assign
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-4">
                            <h6>Quick Assignment Helper</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title">Available ES Users</h6>
                                            @if (Model.ESUsers.Any())
                                            {
                                                @foreach (var es in Model.ESUsers)
                                                {
                                                    <span class="badge bg-secondary me-1 mb-1">@es.DisplayName</span>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-0">No ES users available</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title">Available EYDs</h6>
                                            @if (Model.AssignedEYDs.Any())
                                            {
                                                @foreach (var eyd in Model.AssignedEYDs)
                                                {
                                                    <div class="mb-1">
                                                        <span class="badge bg-primary">@eyd.DisplayName</span>
                                                        <small class="text-muted">(@eyd.Scheme?.Name)</small>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-0">No EYDs assigned to schemes yet</p>
                                                <small class="text-muted">Assign EYDs to schemes first</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-exclamation-triangle fa-2x text-warning mb-3"></i>
                            <h6>Prerequisites Required</h6>
                            @if (!Model.ESUsers.Any())
                            {
                                <p class="text-muted">No ES users available for assignment</p>
                            }
                            @if (!Model.AssignedEYDs.Any())
                            {
                                <p class="text-muted">No EYDs assigned to schemes yet</p>
                                <p class="text-muted">Please assign EYDs to schemes first</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Current Assignments Summary -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Assignment Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-primary">@Model.Schemes.Count</h4>
                                <small class="text-muted">Available Schemes</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-warning">@Model.UnassignedTPDs.Count</h4>
                                <small class="text-muted">Unassigned TPDs</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-info">@Model.UnassignedEYDs.Count</h4>
                                <small class="text-muted">Unassigned EYDs</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-success">@Model.AssignedEYDs.Count</h4>
                            <small class="text-muted">Assigned EYDs</small>
                        </div>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <a asp-action="ManageESAssignments" class="btn btn-outline-info">
                            <i class="fas fa-link me-2"></i>View ES-EYD Assignments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
