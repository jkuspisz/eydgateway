@model EYDGateway.Models.ProtectedLearningTime

@{
    ViewData["Title"] = "Delete Protected Learning Time";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this Protected Learning Time entry? This action cannot be undone.
                    </div>
                    
                    @if (Model.IsLocked)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This entry is marked as completed and locked.
                        </div>
                    }
                    
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Format)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Format)</dd>
                        
                        <dt class="col-sm-3">Length of PLT</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.LengthOfPLT)</dd>
                        
                        <dt class="col-sm-3">When & Who Led</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.WhenAndWhoLed)</dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsLocked)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-lock me-1"></i>Completed
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-edit me-1"></i>Draft
                                </span>
                            }
                        </dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete PLT Entry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
