@model EYDGateway.Controllers.ESDashboardViewModel
@{
    ViewData["Title"] = $"Dashboard - {Model.UserName}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>ES Personal Dashboard</h2>
                    <p class="text-muted">Welcome, @Model.UserName</p>
                    <small class="text-muted">Area: @Model.AssignedArea</small>
                    <div class="mt-2">
                        <span class="badge bg-success">Dashboard ID: @Model.UserId.Substring(0, 8)...</span>
                    </div>
                </div>
                <div>
                    <span class="badge bg-info fs-6">ES User</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Pending Assessment Tasks -->
    @if (Model.PendingInvitations.Any())
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5><i class="fas fa-tasks me-2"></i>My Assessment Tasks (@Model.PendingInvitations.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>EYD User</th>
                                        <th>SLE Type</th>
                                        <th>EPA Areas</th>
                                        <th>Invited Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invitation in Model.PendingInvitations)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@invitation.EYDUser.DisplayName</strong><br>
                                                <small class="text-muted">@invitation.EYDUser.Email</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@invitation.SLEType</span>
                                            </td>
                                            <td>
                                                @if (invitation.EPAMappings.Any())
                                                {
                                                    @foreach (var epaMapping in invitation.EPAMappings)
                                                    {
                                                        <span class="badge bg-secondary me-1">@epaMapping.EPA.Code</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No EPA specified</span>
                                                }
                                            </td>
                                            <td>
                                                @if (invitation.InvitationSentAt.HasValue)
                                                {
                                                    @invitation.InvitationSentAt.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not sent</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/SLE/Details/@invitation.Id" class="btn btn-success btn-sm">
                                                    <i class="fas fa-clipboard-check me-1"></i>Complete Assessment
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Supervised EYD Users -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user-graduate me-2"></i>My Supervised EYD Users (@Model.EYDUsers.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.EYDUsers.Any())
                    {
                        <div class="row">
                            @foreach (var eydUser in Model.EYDUsers)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-left-success">
                                        <div class="card-body">
                                            <h6 class="card-title">@eydUser.DisplayName</h6>
                                            <p class="card-text">
                                                <small class="text-muted">@eydUser.Email</small><br>
                                                <span class="badge bg-info">@eydUser.Scheme?.Name</span><br>
                                                <span class="badge bg-secondary">@eydUser.Scheme?.Area?.Name</span>
                                            </p>
                                            <a href="/EYD/Portfolio/@eydUser.Id" class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-folder me-1"></i>View Portfolio
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No EYD users currently assigned to you for supervision.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-success {
    border-left: 0.25rem solid #28a745 !important;
}

.card:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease-in-out;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
</style>
